<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.umlscd.ClassDiagramUI">
    <!-- Top Menu -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="Home" fx:id="homeButton" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="New"/>
                    <MenuItem text="Open"/>
                    <MenuItem text="Save"/>
                    <MenuItem text="Exit"/>
                </Menu>
                <Menu text="Edit">
                    <MenuItem text="Undo"/>
                    <MenuItem text="Redo"/>
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About"/>
                </Menu>
            </MenuBar>
        </HBox>
    </top>

    <!-- Left Panel with Fixed Width -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10;" prefWidth="220" maxWidth="220"> <!-- Set fixed width -->
            <!-- Working Diagrams Section -->
            <TitledPane text="Working Diagrams" expanded="true">
                <VBox spacing="5" style="-fx-padding: 5;">
                    <ListView fx:id="diagramListView"/>
                </VBox>
            </TitledPane>

            <!-- Toolbox Section -->
            <TitledPane text="Toolbox" expanded="true">
                <VBox spacing="5" style="-fx-padding: 5;">
                    <Button text="Class" fx:id="btnClass"/>
                    <Button text="Interface" fx:id="btnInterface"/>
                    <Button text="Association" fx:id="btnAssociation"/>
                    <Button text="Directed Association" fx:id="btnDirectedAssociation"/>
                    <Button text="Aggregation" fx:id="btnAggregation"/>
                    <Button text="Composition" fx:id="btnComposition"/>
                    <Button text="Dependency" fx:id="btnDependency"/>
                    <Button text="Generalization" fx:id="btnGeneralization"/>
                    <Button text="Interface Realization" fx:id="btnInterfaceRealization"/>
                </VBox>
            </TitledPane>
        </VBox>
    </left>

    <!-- Center Pane (Canvas for Drawing) -->
    <center>
        <Pane fx:id="drawingPane" style="-fx-background-color: white; -fx-border-color: lightgrey;"/>
    </center>

    <!-- Right Panel -->
    <right>
        <VBox spacing="10" style="-fx-padding: 10;" prefWidth="300" maxWidth="300"> <!-- Set fixed width -->

            <!-- Model Explorer Section -->
            <TitledPane text="Model Explorer" expanded="true">
                <VBox spacing="5">
                    <ListView fx:id="modelExplorerListView"/>
                </VBox>
            </TitledPane>

            <!-- Editors Section (For Class Editor) -->
            <TitledPane text="Editors" expanded="true">
                <VBox fx:id="editorsPane" spacing="5" style="-fx-padding: 5;">
                    <!-- This pane will be dynamically populated with the Class Editor when a class is selected -->
                </VBox>
            </TitledPane>
        </VBox>
    </right>
</BorderPane>
