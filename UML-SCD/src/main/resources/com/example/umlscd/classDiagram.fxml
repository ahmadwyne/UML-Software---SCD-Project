<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.umlscd.ClassDiagram">

    <!-- Top Menu -->
    <top>
        <MenuBar>
            <Menu text="Home">
                <MenuItem text="Home" onAction="#handleHome"/>
            </Menu>
            <Menu text="File">
                <MenuItem text="New"/>
                <MenuItem text="Open"/>
                <MenuItem text="Save"/>
                <MenuItem text="Exit"/>
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Undo"/>
                <MenuItem text="Redo"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Left Panel -->
    <left>
        <VBox style="-fx-padding: 10;">
            <!-- Working Diagrams Section -->
            <TitledPane text="Working Diagrams" expanded="true">
                <VBox spacing="5" style="-fx-padding: 5;">
                    <ListView fx:id="diagramListView"/>
                    <!-- Add logic to populate diagrams dynamically in the controller -->
                </VBox>
            </TitledPane>

            <!-- Toolbox Section -->
            <TitledPane text="Toolbox" expanded="true">
                <VBox spacing="5" style="-fx-padding: 5;">
                    <Button text="Class" fx:id="btnClass"/>
                    <Button text="Interface" fx:id="btnInterface"/>
                    <Button text="Association" fx:id="btnAssociation"/>
                    <Button text="Directed Association" fx:id="btnDirectedAssociation"/>
                    <Button text="Aggregation" fx:id="btnAggregation"/>
                    <Button text="Composition" fx:id="btnComposition"/>
                    <Button text="Dependency" fx:id="btnDependency"/>
                    <Button text="Generalization" fx:id="btnGeneralization"/>
                    <Button text="Interface Realization" fx:id="btnInterfaceRealization"/>
                    <!-- Add more buttons if needed -->
                </VBox>
            </TitledPane>
        </VBox>
    </left>

    <!-- Center Pane (Canvas for Drawing) -->
    <center>
        <Pane fx:id="drawingPane" style="-fx-background-color: white; -fx-border-color: lightgrey;"/>
    </center>

    <!-- Right Panel (Placeholder for Properties) -->
    <right>
        <VBox spacing="5" style="-fx-padding: 10;">
            <TitledPane text="Model Explorer" expanded="true">
                <VBox>
                    <ListView fx:id="modelExplorerListView"/>
                    <!-- Add controls for model exploration here -->
                </VBox>
            </TitledPane>

            <TitledPane text="Editors" expanded="true">
                <VBox>
                    <ListView fx:id="propertiesListView"/>
                    <!-- Add controls for properties editing here -->
                </VBox>
            </TitledPane>
        </VBox>
    </right>

</BorderPane>
