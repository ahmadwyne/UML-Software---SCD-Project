<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.umlscd.WelcomePage"
      alignment="CENTER" spacing="20"
      style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #f1f1f1, #e0e0e0);">

    <!-- Logo -->
    <ImageView fx:id="logoImageView" fitWidth="200" fitHeight="200"/>

    <!-- Welcome Text -->
    <Text text="Welcome to the UML Editor"
          style="-fx-font-size: 32px; -fx-fill: #333333; -fx-font-weight: bold; -fx-text-alignment: center;"/>

    <!-- Stylish Description -->
    <Text text="Design and visualize your software architecture effortlessly."
          style="-fx-font-size: 18px; -fx-fill: #444444; -fx-font-style: italic; -fx-text-alignment: center; -fx-effect: dropshadow(gaussian, #aaaaaa, 2, 0.5, 1, 1);"/>
    <Text text="Create intuitive and elegant Class and Use Case diagrams"
          style="-fx-font-size: 18px; -fx-fill: #444444; -fx-font-style: italic; -fx-text-alignment: center; -fx-effect: dropshadow(gaussian, #aaaaaa, 2, 0.5, 1, 1);"/>
    <Text text="to bring your software ideas to life!"
          style="-fx-font-size: 18px; -fx-fill: #444444; -fx-font-style: italic; -fx-text-alignment: center; -fx-effect: dropshadow(gaussian, #aaaaaa, 2, 0.5, 1, 1);"/>

    <!-- Buttons -->
    <Button text="Class Diagram"
            fx:id="btnClassDiagram"
            style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #0066cc; -fx-text-fill: white; -fx-cursor: hand; -fx-pref-width: 220; -fx-pref-height: 55; -fx-background-radius: 15;"/>
    <Button text="Use Case Diagram"
            fx:id="btnUseCaseDiagram"
            style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #0066cc; -fx-text-fill: white; -fx-cursor: hand; -fx-pref-width: 220; -fx-pref-height: 55; -fx-background-radius: 15;"/>
</VBox>
