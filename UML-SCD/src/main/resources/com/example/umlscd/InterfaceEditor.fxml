<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.umlscd.InterfaceEditorUI">
    <!-- Centered Class Name Section -->
    <TextField fx:id="interfaceNameField" promptText="Class Name" style="-fx-alignment: center;"/>

    <!-- Methods Section -->
    <Label text="Methods"/>
    <TextFlow fx:id="methodsFlow" style="-fx-font-size: 14px;" />

    <!-- Method Controls (Return Type, Visibility, and Method Name with Add Parameter Button) -->
    <HBox spacing="5">
        <ComboBox fx:id="returnTypeDropdown" promptText="Return Type" prefWidth="150"/>
        <ComboBox fx:id="methodVisibilityDropdown" promptText="Visibility" prefWidth="150"/>
    </HBox>

    <HBox spacing="5">
        <TextField fx:id="methodNameField" promptText="Method Name"/>
        <Button text="Add Parameter" fx:id="addParameterButton"/>
    </HBox>

    <!-- Add Method Button -->
    <Button text="Add Method" fx:id="addMethodButton"/>

    <!-- Apply Changes Button -->
    <Button text="Apply Changes" fx:id="applyChangesButton"/>
</VBox>
